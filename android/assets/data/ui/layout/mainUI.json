{
  "type": "Stack",
  "name": "Main UI Stack",
  "content": [
    {
      "type": "Table",
      "name": "Main UI",
      "id": "main_ui",
      "channel": "fr.limsi.rorqual.core.event.Channel.UI",
      "event": "fr.limsi.rorqual.core.event.UiEvent.BUTTON_CLICKED",
      "position": "top-center",
      "align": "right",
      "layout": "column",
      "expand":false,
      "content": [
        {
          "type": "ButtonGroup",
          "id": "save_buttons",
          "layout": "column",
          "pad": 0,
          "minChecked": 0,
          "content": [
            {
              "type": "Button",
              "text": "Save",
              "value": "fr.limsi.rorqual.core.event.ButtonValue.SAVE",
              "height": "auto",
              "width": "5%",
              "pad": 0,
              "style": [
                "drawable:save",
                "drawable:save:tint:888888",
                null,
                "default.fnt"
              ]
            }
          ]
        },
        {
          "type": "ButtonGroup",
          "layout": "column",
          "align": "right",
          "pad": 0,
          "minChecked": 0,
          "maxChecked": 2,
          "content": [
            {
              "type": "Button",
              "text": "2D/3D",
              "id": "camera_button",
              "value": "fr.limsi.rorqual.core.event.ButtonValue.SWITCH_2D_3D",
              "height": "auto",
              "width": "5%",
              "pad": 0,
              "style": [
                "drawable:2D",
                null,
                null,
                "default.fnt"
              ]
            }
          ]
        },
        {
          "type": "ButtonGroup",
          "id": "calcul_buttons",
          "layout": "column",
          "minChecked": 0,
          "pad": 0,
          "padRight": 15,
          "content": [
            {
              "type": "Button",
              "value": "fr.limsi.rorqual.core.event.ButtonValue.DPE",
              "name": "dpe",
              "height": "auto",
              "width": "5%",
              "pad": 0,
              "style": [
                "drawable:dpe",
                "drawable:dpe:tint:888888",
                "drawable:dpe:tint:888888",
                "default.fnt"
              ]
            },
            {
              "type": "Button",
              "value": "fr.limsi.rorqual.core.event.ButtonValue.CHAUFFAGE",
              "name": "chauffage",
              "height": "auto",
              "width": "5%",
              "pad": 0,
              "style": [
                "drawable:chauffage",
                "drawable:chauffage:tint:888888",
                "drawable:chauffage:tint:888888",
                "default.fnt"
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Table",
      "name": "Main score",
      "id": "main_score",
      "position": "bottom-center",
      "align": "right",
      "layout": "column",
      "expand":false,
      "content": [
        {
          "type": "ButtonGroup",
          "layout": "row",
          "minChecked": 0,
          "content": [
            {
              "type": "CircularJauge",
              "id": "dpe_jauge",
              "height": "64",
              "width": "1024",
              "style": [
                "texture:bar",
                "texture:bar_background"
              ]
            }
          ]
        }
      ]
    }
  ]
}